/* 容器 */
.container {
  min-height: 100vh;
  padding-bottom: 60rpx;
  background: #f5f0e8;
}

/* Header - 深蓝金色古风 */
.header {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx 32rpx;
  background: linear-gradient(135deg, #1a2640 0%, #243350 50%, #1e2d48 100%);
  color: #fff;
}

.header-icon {
  font-size: 56rpx;
  margin-right: 20rpx;
  background: rgba(218, 180, 80, 0.15);
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 42rpx;
  font-weight: bold;
  letter-spacing: 6rpx;
  color: #e8d5a0;
}

.header-subtitle {
  font-size: 22rpx;
  color: rgba(232, 213, 160, 0.6);
  margin-top: 6rpx;
  letter-spacing: 2rpx;
}

/* 搜索区域 */
.search-section {
  margin: 24rpx 24rpx 0;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.92);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(26, 38, 64, 0.06);
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e2ddd4;
  border-radius: 16rpx;
  padding: 0 8rpx 0 20rpx;
  height: 80rpx;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.placeholder {
  color: #b8b0a4;
  font-size: 26rpx;
}

.search-btn {
  background: linear-gradient(135deg, #2a3a5c, #1a2640);
  color: #e8d5a0;
  font-size: 28rpx;
  font-weight: 600;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 120rpx;
}

.search-btn.loading {
  opacity: 0.8;
}

/* Loading 小圆点 */
.loading-dots {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 64rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #e8d5a0;
  border-radius: 50%;
  animation: bounce 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }
.dot:nth-child(3) { animation-delay: 0s; }

@keyframes bounce {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 快捷标签 */
.tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 20rpx;
}

.tag {
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #f9f5ec, #f0ead8);
  border: 2rpx solid #d4c9a8;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #5c4a2a;
  transition: all 0.2s;
}

.tag:active {
  transform: scale(0.95);
  background: #d4c9a8;
  color: #2a1f0e;
}

/* 错误提示 */
.error-box {
  margin: 20rpx 24rpx;
  padding: 24rpx;
  background: rgba(239, 68, 68, 0.08);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #dc2626;
  text-align: center;
}

/* 地图预览 */
.map-preview-section {
  margin: 24rpx 24rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-icon {
  font-size: 32rpx;
}

.section-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a2640;
}

.map-fullscreen-btn {
  padding: 8rpx 20rpx;
  background: #1a2640;
  color: #e8d5a0;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.map-fullscreen-btn:active {
  opacity: 0.8;
}

.map-wrapper {
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(26, 38, 64, 0.1);
}

.preview-map {
  width: 100%;
  height: 400rpx;
}

/* 结果列表 */
.results {
  margin: 24rpx 24rpx 0;
}

.result-count {
  font-size: 22rpx;
  color: #a09888;
}

.result-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
  border: 2rpx solid #ede8df;
  transition: all 0.3s;
}

.result-card.active {
  border-color: #c4a962;
  box-shadow: 0 4rpx 24rpx rgba(196, 169, 98, 0.15);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card-names {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
  flex: 1;
}

.ancient-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #1a2640;
}

.arrow {
  color: #c4c0b8;
  font-size: 28rpx;
}

.modern-name {
  font-size: 30rpx;
  color: #5c5548;
  font-weight: 500;
}

.card-actions {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.card-map-btn {
  padding: 10rpx 16rpx;
  background: #f0ead8;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.card-map-btn:active {
  opacity: 0.7;
}

.card-nav {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #2a3a5c, #1a2640);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #e8d5a0;
  font-weight: 600;
}

.card-nav:active {
  opacity: 0.8;
  transform: scale(0.95);
}

.card-info {
  margin-top: 12rpx;
}

.info-location {
  font-size: 24rpx;
  color: #8a8278;
}

.card-desc {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0ebe2;
  animation: slideDown 0.3s ease;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.desc-text {
  font-size: 26rpx;
  color: #5c5548;
  line-height: 1.7;
}

.dynasty-tag {
  display: inline-block;
  margin-top: 16rpx;
  padding: 8rpx 20rpx;
  background: #f9f5ec;
  border: 1rpx solid #e2ddd4;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #5c4a2a;
}

.card-hint {
  margin-top: 8rpx;
  text-align: center;
}

.card-hint text {
  font-size: 22rpx;
  color: #c4c0b8;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
}

.empty-icons {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.empty-icon-main {
  font-size: 80rpx;
}

.empty-icon-star {
  font-size: 36rpx;
  color: #c4a962;
}

.empty-icon-map {
  font-size: 60rpx;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1a2640;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #a09888;
  text-align: center;
}

.empty-examples {
  margin-top: 32rpx;
}

.empty-examples text {
  font-size: 24rpx;
  color: #c4a962;
  letter-spacing: 4rpx;
}

/* 骨架屏 */
.skeleton {
  margin: 24rpx;
}

.skeleton-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx;
}

.skeleton-line {
  height: 28rpx;
  border-radius: 8rpx;
  background: #ede8df;
  margin-bottom: 20rpx;
}

.skeleton-line.long { width: 70%; }
.skeleton-line.medium { width: 50%; }
.skeleton-line.short { width: 35%; }

.shimmer {
  background: linear-gradient(90deg, #ede8df 25%, #f5f0e8 50%, #ede8df 75%);
  background-size: 200% 100%;
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}
