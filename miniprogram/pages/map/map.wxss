/* 地图页面 */
.map-page {
  position: relative;
  width: 100%;
  height: 100vh;
}

.full-map {
  width: 100%;
  height: 100%;
}

/* 底部信息卡片 */
.bottom-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  box-shadow: 0 -8rpx 40rpx rgba(26, 38, 64, 0.12);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 100;
  padding-bottom: env(safe-area-inset-bottom);
}

.bottom-panel.show {
  transform: translateY(0);
}

.panel-handle {
  display: flex;
  justify-content: center;
  padding: 16rpx 0 8rpx;
}

.handle-bar {
  width: 60rpx;
  height: 6rpx;
  background: #d4d0c8;
  border-radius: 3rpx;
}

.panel-content {
  padding: 0 32rpx 32rpx;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.panel-names {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.panel-ancient {
  font-size: 38rpx;
  font-weight: bold;
  color: #1a2640;
}

.panel-arrow {
  color: #c4c0b8;
  font-size: 28rpx;
}

.panel-modern {
  font-size: 32rpx;
  color: #5c5548;
  font-weight: 500;
}

.panel-nav-btn {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #2a3a5c, #1a2640);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #e8d5a0;
  font-weight: 600;
}

.panel-nav-btn:active {
  opacity: 0.8;
}

.panel-info {
  margin-bottom: 12rpx;
}

.panel-location {
  font-size: 24rpx;
  color: #8a8278;
}

.panel-desc {
  margin-bottom: 16rpx;
}

.panel-desc-text {
  font-size: 26rpx;
  color: #5c5548;
  line-height: 1.7;
}

.panel-dynasty {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: #f9f5ec;
  border: 1rpx solid #e2ddd4;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #5c4a2a;
}

/* 地点列表按钮 */
.list-toggle {
  position: fixed;
  top: 24rpx;
  right: 24rpx;
  z-index: 90;
  background: #1a2640;
  color: #e8d5a0;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(26, 38, 64, 0.3);
}

.list-toggle:active {
  opacity: 0.8;
}

/* 地点列表弹出层 */
.list-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 200;
  display: none;
}

.list-overlay.show {
  display: block;
}

.list-panel {
  position: absolute;
  top: 0;
  right: 0;
  width: 560rpx;
  height: 100%;
  background: #fff;
  box-shadow: -8rpx 0 32rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
}

.list-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1a2640;
  border-bottom: 2rpx solid #f0ebe2;
}

.list-close {
  font-size: 36rpx;
  color: #a09888;
  padding: 8rpx 16rpx;
}

.list-scroll {
  flex: 1;
}

.list-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f5f0e8;
  flex-wrap: wrap;
}

.list-item.active {
  background: #f9f5ec;
  border-left: 6rpx solid #c4a962;
}

.list-item:active {
  background: #f5f0e8;
}

.list-item-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #1a2640;
}

.list-item-arrow {
  font-size: 24rpx;
  color: #c4c0b8;
}

.list-item-modern {
  font-size: 28rpx;
  color: #5c5548;
}

.list-item-province {
  font-size: 22rpx;
  color: #a09888;
  margin-left: auto;
}
